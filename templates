<div class="container" id="list">
  </div>

<script>
  // localStorage рд╕реЗ рдЯреЗрдореНрдкрд▓реЗрдЯреНрд╕ рдирд┐рдХрд╛рд▓рдирд╛
  const templates = JSON.parse(localStorage.getItem("templates") || "[]");
  const container = document.getElementById("list");

  function renderTemplates() {
    if(templates.length === 0) {
      container.innerHTML = `<div class="empty-state">
        <div style="font-size:50px;">ЁЯУж</div>
        <p>рдЕрднреА рддрдХ рдХреЛрдИ рдЯреЗрдореНрдкрд▓реЗрдЯ рд╕реЗрд╡ рдирд╣реАрдВ рдХрд┐рдпрд╛ рдЧрдпрд╛ рд╣реИред<br>рд╕рд╛рдордЧреНрд░реА рдкреЗрдЬ рд╕реЗ "рд╕реЗрд╡ рдЯреЗрдореНрдкрд▓реЗрдЯ" рдмрдЯрди рджрдмрд╛рдПрдБред</p>
      </div>`;
      return;
    }

    container.innerHTML = "";
    templates.forEach((t, i) => {
      container.innerHTML += `
        <div class="temp-card">
          <div class="temp-name">${t.name}</div>
          <div class="temp-meta">ЁЯУЕ рддрд╛рд░реАрдЦ: ${t.date}</div>
          <div class="temp-poojas">ЁЯХЙя╕П ${t.poojas.join(", ")}</div>
          <div class="actions">
            <button class="btn-load" onclick="loadTemplate(${i})">Edit & Print тЬНя╕П</button>
            <button class="btn-del" onclick="deleteTemp(${i})">Delete ЁЯЧСя╕П</button>
          </div>
        </div>
      `;
    });
  }

  // рдЯреЗрдореНрдкрд▓реЗрдЯ рд▓реЛрдб рдХрд░рдиреЗ рдХрд╛ рд▓реЙрдЬрд┐рдХ
  function loadTemplate(idx) {
    const t = templates[idx];
    
    // рд╕рднреА рдЬрд╝рд░реВрд░реА Keys рдХреЛ рд╕реЗрдЯ рдХрд░рдирд╛ рддрд╛рдХрд┐ samagri.html рдФрд░ preview.html рдкрд╣рдЪрд╛рди рд╕рдХреЗрдВ
    localStorage.setItem("pooja_meta", JSON.stringify(t.meta));
    localStorage.setItem("selected_poojas", JSON.stringify(t.poojas));
    localStorage.setItem("final_samagri", JSON.stringify(t.samagri)); // рдкреБрд░рд╛рдиреА рдорд╛рддреНрд░рд╛ (Quantity) рд▓реЛрдб рдХрд░рдирд╛
    
    // рд╕реАрдзреЗ рд╕рд╛рдордЧреНрд░реА рдкреЗрдЬ рдкрд░ рднреЗрдЬреЗрдВ рддрд╛рдХрд┐ рдПрдбрд┐рдЯ рдХрд┐рдпрд╛ рдЬрд╛ рд╕рдХреЗ
    window.location.href = "samagri.html";
  }

  // рдЯреЗрдореНрдкрд▓реЗрдЯ рдбрд┐рд▓реАрдЯ рдХрд░рдиреЗ рдХрд╛ рд▓реЙрдЬрд┐рдХ
  function deleteTemp(idx) {
    if(confirm("рдХреНрдпрд╛ рдЖрдк рдЗрд╕ рдпрдЬрдорд╛рди рдХрд╛ рдЯреЗрдореНрдкрд▓реЗрдЯ рд╣рдЯрд╛рдирд╛ рдЪрд╛рд╣рддреЗ рд╣реИрдВ?")) {
      templates.splice(idx, 1);
      localStorage.setItem("templates", JSON.stringify(templates));
      renderTemplates();
    }
  }

  renderTemplates();
</script>
